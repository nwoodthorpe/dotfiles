#!/bin/bash

PANEL_FIFO="/tmp/bspwm-fifo.$USER"
PANEL_FONT='Ubuntu Mono:size=10'
PANEL_UNDERLINE_WIDTH=3
PANEL_FG='#969696'
PANEL_BG='#222222'
PANEL_UD=$PANEL_BG

# Bspwm state colors

COLOR_OCCUPIED_FOCUSED_FG=$PANEL_FG
COLOR_OCCUPIED_FOCUSED_BG=$PANEL_BG
COLOR_OCCUPIED_FOCUSED_UD='#00EEFF'

COLOR_FREE_FOCUSED_FG=$PANEL_FG
COLOR_FREE_FOCUSED_BG=$PANEL_BG
COLOR_FREE_FOCUSED_UD='#FFFF7F'

COLOR_URGEN_FOCUSED_FG=$PANEL_FG
COLOR_URGEN_FOCUSED_BG=$PANEL_BG
COLOR_URGEN_FOCUSED_UD='#FF007F'

COLOR_OCCUPIED_FG=$PANEL_FG
COLOR_OCCUPIED_BG=$PANEL_BG
COLOR_OCCUPIED_UD='#0000FF'

COLOR_FREE_FG=$PANEL_FG
COLOR_FREE_BG=$PANEL_BG
COLOR_FREE_UD=$PANEL_BG

COLOR_URGEN_FG=$PANEL_FG
COLOR_URGEN_BG=$PANEL_BG
COLOR_URGEN_UD='#FF0077'
