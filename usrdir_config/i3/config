# i3wm default configs# {{{

# Mod keys # {{{
set $mod Mod4
set $alt Mod1
set $shift Shift
set $ctrl Control
set $esc Escape
set $ret Return
floating_modifier $mod

# }}}

# Font
#font pango:Ubuntu Mono derivative Powerline 10
font pango:Consolas 10

# Window border
new_window pixel 2

# Titlebar format
for_window [class=".*"] title_format " üçÄ %title"

