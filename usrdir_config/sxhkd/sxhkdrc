# Bspwm control keybinding

# bspwm control {{{

# Restart bspwm
super + alt + {_,shift + }Escape
    {bspc query -T > "$BSPWM_TREE"; \
    bspc query -H > "$BSPWM_HISTORY"; \
    bspc query -S > "$BSPWM_STACK"; \
    bspc quit, \
    bspc quit 1}

# }}}

# Node commands {{{

# Close node
super + w
    bspc node -c

# Kill node
super + shift + w
    bspc node -k

# Select new node location
super + ctrl + {j,k,h,l}
    bspc node -p {south,north,west,east}

# Change node border size
super + {plus, minus}
    window-gap {inc, dec}

# Select node
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# Swap nodes
super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

# Balance nodes
super + b
    bspc node @/ -B

# Rotate nodes
super + {comma,period}
    bspc node @/ -C {forward,backward}

# Flip nodes
super + shift {comma,period}
    bspc node @/ -F {horizontal,vertical}

# Move node
alt + {Left,Right,Up,Down}
    xdo move {-x -20,-x +20,-y -20,-y +20}

# Focus to the next / prev node
super + {_,shift +} c
    bspc node -f {next,prev}

# Swap position with last node
super + o
    bspc node -s last

# Send the current node to the biggest slot
super + i
    bspc node -s biggest

# Resize floating windows
alt + shift + {Left,Right,Up,Down}
    xdo resize {-w -20,-w +20,-h -20,-h +20} bspc node @DIR -r {west -10,south +10,north -10,east +10} || {east -10,north +10,south -10,west +10}

# Lock node
alt + shift + p
    bspc window -t private

# Toggle floating / fullscreen
super + {s,f}
      bspc node -t {"~floating","~fullscreen"}

# Focus on next node
alt + Tab
    bspc node -f next

# Switch to last used node
super + grave
    bspc node -f last

# Switch / send window to workspace 1-10
super + shift + {1-9,0}
      bspc node -d ^{1-9,10}

# Node commands }}}

# Desktop commands {{{

# Toggle monocle
super + space
    bspc desktop -l next

# Toggle Previous / Next Desktop
super + {p,n}
    bspc desktop -f {prev.occupied,next.occupied}

# Switch to last used desktop
super + Tab
    bspc desktop -f last

# Switch desktop
super + {1-9,0}
    bspc desktop -f ^{1-9,10}

# Desktop commands }}}

# Monitor commands {{{

# Previous/next monitor (untested)
super + shift + {p,n}
    bspc monitor -f {prev,next}

# }}}

# Pointer commands {{{

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

# }}}

# Applications keybinding

# Screenshot {{{

Print
   printscn --mode=full

ctrl + Print
    printscn --mode=full --upload=yes

shift + Print
    printscn --mode=select

ctrl + shift + Print
    printscn --mode=select --upload=yes

alt + Print
    printscn --mode=window

ctrl + alt + Print
    printscn --mode=window --upload=yes

# }}}

# Extra {{{

# System monitor
ctrl + Escape
    gnome-system-monitor

# Screen lock
super + F11
    cinnamon-screensaver-command -l

# Terminal
super + {_,shift +,ctrl +,alt +} Return
    urxvtc -e bash -c "tmux-session {Blanc,Arca,Ellen,Noir}"

super + shift + Return
    tmux-session Arca

super + ctrl + Return
    tmux-session Ellen

super + alt + Return
    tmux-session Noir

# rofi launcher
alt + {F1,F2}
    rofi -show {window,run}

# Application menu
#alt + F2
#    gmrun

# Reload sxhkd settings
super + Escape
    pkill -USR1 -x sxhkd && notify-send "Keymap reloaded"

# Launch file manager
super + e
    nemo

# Volume control
XF86Audio{Raise,Lower}Volume
    dvol {-i,-d} 3

# Mute volume
XF86AudioMute
    amixer set Master toggle

# Sleep
XF86Sleep
    systemctl hybird-sleep

# Audio keys
XF86Audio{Play,Stop,Next,Prev}
    mpdcontrol {toggle,stop,next,prev}

# Webcam
#XF86WebCam

# Calc
XF86Calculator
    speedcrunch

# Touchpad
XF86TouchpadToggle
    touchpad-script auto

# Keyboard led
XF86KbdBrightness{Up,Down}
    dkeyboardled {up,down}

# Brightness
XF86MonBrightness{Up,Down}
    dbrightness {up,down}

# Mail
XF86Mail
    thunderbird

# Tools
#XF86Tools

# Homepage
XF86HomePage
    firefox

#XF86Reply

# }}}
