#!/bin/bash

# steam runtime library linking
#export LD_PRELOAD='/usr/lib/nvidia/libGL.so /usr/$LIB/libgcc_s.so.1 /usr/$LIB/libxcb.so.1 /usr/$LIB/libgpg-error.so ./libcxxrt.so /usr/lib32/libstdc++.so.6'

